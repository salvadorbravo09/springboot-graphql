# Query - Me sirve solo para hacer consultas
type Query {
    findAllStudents: [Student],
    findStudentById(studentId: String): Student
}

type Mutation {
    createStudent(inputStudent: InputStudent): Student,
    deleteStudentById(studentId: String): String
}

type Student {
    id: ID,
    name: String,
    lastName: String,
    age: Int
}

input InputStudent {
    name: String,
    lastName: String,
    age: Int,
    courseId: String!
}